<section id="banner">
  <div class="background">
    <div class="inner-background">
      <picture class="rwd-background rwd-background-overlay lazy-picture">
        <source srcset="{page_domain}{template_path}images/1px.gif" data-srcset="{page_domain}{template_path}images/banner-homepage-1-desktop.jpg" media="(min-width: 1200px)">
        <source srcset="{page_domain}{template_path}images/1px.gif" data-srcset="{page_domain}{template_path}images/banner-homepage-1-tablet.jpg" media="(min-width: 768px)">
        <img src="{page_domain}{template_path}images/1px.gif" data-src="{page_domain}{template_path}images/banner-homepage-1-mobile.jpg" alt="Winderen">
      </picture>
    </div>
  </div>
  <div class="scroll-down">
    <div class="text">{str_general_scroll_to_discover_more}</div>
    <div class="icon">
      <img class="lazy-image" src="{page_domain}{template_path}images/1px.gif" data-src="{page_domain}{template_path}images/icons-scroll-down.svg" alt="Winderen" width="20" height="20">
    </div>
  </div>
</section>
<!-- IF PAGE_LANG_INFO -->
  <div class="language-detection">
    <div class="details">{str_header_language_detection}</div>
    <div class="buttons">
      <a class="button button-with-blue-background-hover" href="{page_lang_url}" title="{page_lang_name}">
        <span class="button-label">{page_lang_name}</span>
      </a>
    </div>
    <div class="circular-icon">
      <img src="{page_domain}{template_path}images/icons-close.svg" alt="{page_lang_name}" width="1" height="1">
      <img src="{page_domain}{template_path}images/icons-close-gray.svg" alt="{page_lang_name}" width="1" height="1">
    </div>
  </div>
<!-- ENDIF -->